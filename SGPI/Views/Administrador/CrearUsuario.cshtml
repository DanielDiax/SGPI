@model SGPI.Models.Usuario

@{
    ViewData["Title"] = "CrearUsuario";
    Layout = "_layout";
}

<h1>Crear Usuario</h1>

<form method="post">
    <div class="row">
        
    </div>
    <div class="row mt-3" >
        <div class="col-3 form-floating">
            <input asp-for="NumeroDoc" type="number" placeholder="Numero Documento" class="form-control" />
            <label for="floatingInput" class="form-label">Numero Documento</label>
        </div>
        <div class="col-3 form-floating">
            <input asp-for="Nombre" placeholder="Nombre" class="form-control" />
            <label for="floatingInput" class="form-label">Nombre</label>
        </div>
        <div class="col-3 form-floating">
            <input asp-for="PrimerApellido" placeholder="Primer Apellido" class="form-control" />
            <label for="floatingInput" class="form-label">Primer Apellido</label>
        </div>
        <div class="col-3 form-floating">
            <input asp-for="SegundoApellido" placeholder="Segundo Apellido" class="form-control" />
            <label for="floatingInput" class="form-label">Segundo Apellido</label>
        </div>

    </div>
    <div class="row mt-3">
        <div class="col-3">
            <div class="form-control">
                <label asp-for="IdGenero" class="form-label">Genero</label>
                @Html.DropDownList("IdGenero", new SelectList(ViewBag.genero, "IdGenero", "Genero"), new {@class="form-control"})
            </div>
        </div>
        
        
    </div>
</form>