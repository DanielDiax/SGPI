@model List<SGPI.Models.PagoUsuario>
@{
    ViewData["Title"] = "ObtenerPagos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ObtenerPagos</h1>

<div class="row mt-4 card shadow-lg bg-white mb-2 p-1">
    @if(Model.Count > 0)
    {
        <table class="table table-sm table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Primer Apellido</th>
                    <th>Segundo Apellido</th>
                    <th>Numero Documento</th>
                    <th>Programa</th>
                    <th>ValorPago</th>
                    <th>Fecha</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pago in Model)
                {
                    <tr>
                        <td>@pago.IdPago</td>
                        <td>@pago.Nombre</td>
                        <td>@pago.PrimerApellido</td>
                        <td>@pago.SegundoApellido</td>
                        <td>@pago.NumDoc</td>
                        <td>@pago.Programa</td>
                        <td>@pago.ValorPago</td>
                        <td>@pago.Fecha</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>